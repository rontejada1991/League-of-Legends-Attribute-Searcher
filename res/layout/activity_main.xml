<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    
    <ImageView
        android:id="@+id/test_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_menu" />

    <Button
        android:id="@+id/champion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="Champion Names"
        android:textStyle="bold" />

    <Button
        android:id="@+id/attribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/champion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="Attribute Search"
        android:textStyle="bold" />

    <Button
        android:id="@+id/glossary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attribute"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="Glossary"
        android:textStyle="bold" />
    
        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#FF0000"
        android:text="League of Legends\nChampion Finder"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic"
        android:fontFamily="sans-serif"    
        android:gravity="center" />

</RelativeLayout>
